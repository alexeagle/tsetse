{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",

        "sourceMap": true,
        "preserveConstEnums": true,
        "mapRoot": "built",
        "outDir": "built",

        // Static analysis options
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true
    },
    "exclude": [
        "node_modules",
        "test_files",
        "typings/browser",
        "typings/browser.d.ts"
    ]
}